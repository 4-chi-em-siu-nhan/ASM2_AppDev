@model Category
<form method="post" enctype="multipart/form-dat>
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="display-2">Edit the Category</h2>
        </div>
        <div class="col-8 pt-4">
            <input asp-for="Id" hidden />
            <input asp-for="Status" hidden />
            <div class="form-group row">
                <div class="col-4"><label asp-for="Name">Category Name</label></div>
                <div class="col-8"><input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label for="Description">Description</label></div>
                <div class="col-8">
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col mt-3">
                            <button type="submit" class="btn btn-danger">Edit</button>
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}