@model List<Book>
<div class="row pt-4 pb-4">
	<div class="col-6">
		<h2>List of Book</h2>
	</div>
	<div class="col-6">
		<a asp-controller="Book" asp-action="CreateUpdate" class="btn btn-primary">Create a Book</a>
	</div>
</div>

<div>
	<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>Title</th>
				<th>Author</th>
				<th>Description</th>
				<th>Publisher</th>
				<th>Price</th>
				<th>Category</th>
				<th>Image</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var Book in Model)
			{
				<tr>
					<td>@Book.Title</td>
					<td>@Book.Author</td>
					<td>@Book.Description</td>
					<td>@Book.Publisher</td>
					<td>@Book.Price</td>
					<td>@Book.Category.Name</td>
					<td><img src="@Book.ImageUrl" class="img-fluid" style="width:200px;height:100px;"  /></td>
					<td>
						<a asp-controller="Book" asp-action="CreateUpdate" asp-route-id="@Book.Id" class="btn btn-outline-info">Edit</a>
						<a asp-controller="Book" asp-action="Delete" asp-route-id="@Book.Id" class="btn btn-outline-danger">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>