@model Book
<partial name="_Notification" />
<h1> Delete the Book</h1>
<form method="post">
    <div class="row border p-3 mt-4">
        <div class="col-6">
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Publisher"></label>
            <input asp-for="Publisher" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled>
        </div>
        <div class="mb-3 row">
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" disabled>
        </div>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
        <div class="col-6">
        <img src="@Model.ImageUrl" width="100%" />
        </div>
     </div>
</form>