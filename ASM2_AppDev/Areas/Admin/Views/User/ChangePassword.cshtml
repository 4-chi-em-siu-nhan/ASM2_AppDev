@model ApplicationUser

<form method="post" enctype="multipart/form-dat>
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="display-2">Reset Password</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4"><label asp-for="Id">Account ID</label></div>
                <div class="col-8"><input asp-for="Id" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label for="password">New Password</label></div>
                <div class="col-8"><input type="password" name="password" class="form-control" /></div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col mt-3">
                            <button type="submit" class="btn btn-danger">Reset Password</button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>