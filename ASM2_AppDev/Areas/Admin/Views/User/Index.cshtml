@model List<ApplicationUser>
<partial name="_Notification" />
<div class="row pt-4 pb-4">
    <div class="col-6 pb-4">
        <h2>List of Users</h2>
    </div>
    
    <div>
        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Adress</th>
                    <th>City</th>
                    <th>Role</th>
                    <th></th>
                    
                </tr>
            </thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.Name</td>
							<td>@item.UserName</td>
							<td>@item.PhoneNumber</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
							<td>@item.Role</td>
                            <td>
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-info">Edit</a>
                                
                            </td>
							
						</tr>
					}
				</tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="~/js/user.js"></script>
}