@model RoleManagementVM
<form method="post" enctype="multipart/form-dat>
    <div class="row p-3 border bg-white">
        <div class="col-12 border-bottom">
            <h2 class="display-2">Edit Role of User</h2>
        </div>
        <div class="col-8 pt-4">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="form-group row">
                <div class="col-4"><label asp-for="ApplicationUser.Id">Account ID</label></div>
                <div class="col-8"><input asp-for="ApplicationUser.Id" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="ApplicationUser.FullName">Account Name</label></div>
                <div class="col-8"><input asp-for="ApplicationUser.FullName" class="form-control" disabled /></div>
            </div>
            <div class="form-group row">
                <div class="col-4"><label asp-for="RoleList"></label></div>
                <div class="col-8">
                    <select asp-for="ApplicationUser.Role" asp-items="@Model.RoleList" class="form-select form-select-sm" aria-label=".form-select-sm example">
                        <option selected disabled>--Select Role--</option>
                    </select>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col mt-3">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
