@using ASM2_AppDev.Utility;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPT Book Shop</title>
    <link rel="icon" href="image/logo.ico" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASM2_AppDev.styles.css" asp-append-version="true" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="col-md-2">
                <img src="https://i.imgur.com/vmz0TDb.png" class="img-fluid" style="width:200px;height:75px;">
                </div>
                <div class="col-md-7">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                     <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AllBook">PRODUCT</a>
                        </li>
                            @if (User.IsInRole(SD.Role_StoreOwner))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">CATEGORY LIST</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Book" asp-action="Index">BOOK LIST </a>
                                </li>
                            }
                            @if (User.IsInRole(SD.Role_Admin))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">CATEGORY REQUEST</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="User" asp-action="Index">USER LIST</a>
                                </li>
                            }
                        
                    </ul>
                        <partial name="_LoginPartial" />
                </div>
                </div>

                <div class="col-md-2">
                    <form class="d-flex">
                        <button class="btn btn-outline-dark" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </button>
                    </form>
                    @* <a href=".." class="position-relative">
                        <span class="fs-3"><i class="fa-solid fa-cart-shopping"></i></span>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            0
                            <span class="visually-hidden">unread messages</span>
                        </span>
                    </a> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr />
    <footer class="myfooter py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <img src="https://i.imgur.com/vmz0TDb.png" class="img-fluid" style="width:300px;height:120px;">
                    </div>
                    <p class="m-0">Book Distribution and Retail Store - FPT Book Shop</p>
                    <p class="m-0">
                        856 Ngo Quyen, Son Tra, Danang
                    </p>
                    <p class="m-0">
                        FPT Book shop provides fast and reliable delivery service. Customers can easily choose and order books online through our website or go directly to the store to experience the book title they desire.
                    </p>
                </div>
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <img src="https://i.imgur.com/8CwglFB.png class="img-fluid" style="width:300px;height:300px;">
                </div>

            </div>
            <hr />
            <div class="row"></div>
            <p style="text-align: center"> &copy; Copyright belongs to Mixi Huyen - Hoang Hao - Bao Trang - Hoang Oanh </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
